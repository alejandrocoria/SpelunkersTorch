{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${mod_description}",
    "authors": [
        "${mod_author}"
    ],
    "contact": {
        "email": "${mod_email}",
        "homepage": "${mod_homepage}",
        "issues": "${mod_issues}",
        "sources": "${mod_sources}"
    },
    "license": "${mod_license}",
    "icon": "${mod_id}.png",

    "environment": "*",
    "entrypoints": {
        "main": [
            "games.alejandrocoria.spelunkerstorch.SpelunkersTorchFabric"
        ],
        "client": [
            "games.alejandrocoria.spelunkerstorch.client.SpelunkersTorchClientFabric"
        ]
    },
    "depends": {
        "fabricloader": ">=${fabric_loader_version}",
        "fabric-api": "*",
        "minecraft": "${minecraft_version}",
        "java": ">=17"
    }
}
